const semver = require('semver')
if (!semver.satisfies(process.version.replace('v', ''), '<11 >7')) {
  console.error(`Not starting, because you are using Node.js version ${process.version}: Signal K Server needs v10.`)
  process.exit(-1)
}

const Server = require('../lib')

const server = new Server()
server.start()
  .catch(err => {
    console.log(err)
    process.exit(-1)
  })
